{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": "error",
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "no-multi-spaces": ["error"],
        "max-len": ["error", {
            "code": 90,
            "ignoreComments": true,
            "ignoreUrls": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true
        }]
    }
}
